            <!--<stroke-->
            <!--android:width="1dip"-->
            <!--android:color="@color/match_picker_match_border_unchecked"/>-->
            <gradient
                android:endColor="@color/colorChipBackground"
                android:startColor="@color/colorChipBackground"/>
        </shape>
    </item>
</selector>